#include <stdio.h>
#include <stdlib.h>

void exitProgram() {
    printf("\nAre you sure you want to exit? (y/n): ");
    char sure;
    scanf(" %c", &sure);

    if (sure == 'y' || sure == 'Y') {
        printf("\nExiting program...\n");
        exit(0);
    } else {
        printf("\nReturning to the main program...\n");
    }
}
